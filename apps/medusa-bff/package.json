{
  "name": "medusa-bff",
  "version": "1.0.0",
  "description": "BFF GraphQL API for Medusa Store",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "pnpm run codegen && tsc && tsc-alias",
    "start": "node dist/src/index.js",
    "lint": "eslint src --ext .ts,.tsx",
    "check-types": "tsc --noEmit",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "test:coverage:threshold": "jest --coverage --passWithNoTests",
    "ci": "npm run lint && npm run check-types && npm run test:coverage:threshold && npm run build",
    "pre-commit": "npm run lint && npm run check-types && npm run test",
    "validate": "npm run lint && npm run check-types && npm run test:coverage:threshold",
    "publish-schema": "rover subgraph publish ${APOLLO_GRAPH_REF} --name bff --schema-path schema.graphql --routing-url ${BFF_URL:-http://localhost:4000/graphql}",
    "generate-schema": "rover subgraph introspect ${BFF_URL:-http://localhost:4000/graphql} > schema.graphql"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@apollo/subgraph": "^2.11.3",
    "@graphql-tools/merge": "^9.1.1",
    "@medusajs/js-sdk": "2.10.3",
    "@medusajs/types": "2.10.3",
    "@sanity/client": "^7.12.0",
    "algoliasearch": "^5.40.1",
    "apollo-server-express": "^3.12.1",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-session": "1.18.2",
    "glob": "^11.0.3",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.24.2"
  },
  "devDependencies": {
    "@apollo/rover": "^0.36.2",
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/typescript": "^5.0.0",
    "@graphql-codegen/typescript-resolvers": "^5.1.0",
    "@mds/eslint-config": "workspace:*",
    "@mds/jest-config": "workspace:*",
    "@mds/prettier-config": "workspace:*",
    "@mds/typescript-config": "workspace:*",
    "@parcel/watcher": "^2.5.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "1.18.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "eslint": "^9.31.0",
    "graphql-tag": "^2.12.6",
    "jest": "^29.7.0",
    "msw": "^2.11.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.0",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18"
  }
}
