{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
"globalEnv":  [
        "NODE_ENV",
        "^MEDUSA_[A-Z]+$",
        "^SANITY_[A-Z]+$"
      ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "outputs": []
    }
  }
}
